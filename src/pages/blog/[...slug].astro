---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { execSync } from 'node:child_process';
import path from 'node:path';

export const prerender = true;

export const getGitLastUpdatedDate = (entryId: string) => {
	try {
		const basePath = path.join(process.cwd(), 'src', 'content', 'blog');
		const possibleFiles = [
			path.join(basePath, entryId),
			path.join(basePath, `${entryId}.md`),
			path.join(basePath, `${entryId}.mdx`),
		];

		for (const filePath of possibleFiles) {
			try {
				const isoDate = execSync(`git log -1 --format=%cI -- "${filePath}"`, {
					encoding: 'utf-8',
				}).trim();

				if (isoDate) {
					const parsedDate = new Date(isoDate);
					if (!Number.isNaN(parsedDate.getTime())) {
						return parsedDate;
					}
				}
			} catch {
				continue;
			}
		}
		return undefined;
	} catch (error) {
		console.error(`Erreur Git pour ${entryId}:`, error);
		return undefined;
	}
};

export async function getStaticPaths() {
	const posts = await getCollection('blog');

	return posts.map((post) => {
		const slug = post.slug ?? post.id.replace(/\.mdx?$/, '');
		const gitUpdatedDate = getGitLastUpdatedDate(post.id);
		const updatedDate = gitUpdatedDate || post.data.updatedDate || post.data.pubDate;

		return {
			params: { slug },
			props: {
				...post,
				data: {
					...post.data,
					updatedDate,
				},
			},
		};
	});
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data} content={post.body}>
	<Content />
</BlogPost>
