---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { execSync } from 'node:child_process';
import path from 'node:path';

export const prerender = true;

export const getGitLastUpdatedDate = (entryId: string) => {
	try {
		const basePath = path.join(process.cwd(), 'src', 'content', 'blog');
		const possibleFiles = [
			path.join(basePath, entryId),
			path.join(basePath, `${entryId}.md`),
			path.join(basePath, `${entryId}.mdx`),
		];

		for (const filePath of possibleFiles) {
			try {
				const isoDate = execSync(`git log -1 --format=%cI -- "${filePath}"`, {
					encoding: 'utf-8',
				}).trim();

				if (isoDate) {
					const parsedDate = new Date(isoDate);
					if (!Number.isNaN(parsedDate.getTime())) {
						return parsedDate;
					}
				}
			} catch {
				continue;
			}
		}
		return undefined;
	} catch (error) {
		console.error(`Erreur Git pour ${entryId}:`, error);
		return undefined;
	}
};

export async function getStaticPaths() {
	const allPosts = (await getCollection('blog')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
	);
	const publishedPosts = allPosts.filter(({ data }) => data.draft !== true);

	const toAdjacentPost = (post: CollectionEntry<'blog'> | undefined) => {
		if (!post) return undefined;
		const slug = post.slug ?? post.id.replace(/\.mdx?$/, '');
		const heroImage =
			typeof post.data.heroImage === 'string'
				? post.data.heroImage
				: post.data.heroImage?.src;

		return {
			slug,
			title: post.data.title,
			h1: post.data.h1,
			pubDate: post.data.pubDate,
			heroImage,
		};
	};

	return allPosts.map((post) => {
		const slug = post.slug ?? post.id.replace(/\.mdx?$/, '');
		const gitUpdatedDate = getGitLastUpdatedDate(post.id);
		const updatedDate = gitUpdatedDate || post.data.updatedDate || post.data.pubDate;

		// Navigation prev/next uniquement pour les articles publiÃ©s
		const publishedIndex = publishedPosts.findIndex((p) => p.id === post.id);
		const previousPost = publishedIndex >= 0 ? toAdjacentPost(publishedPosts[publishedIndex + 1]) : undefined;
		const nextPost = publishedIndex >= 0 ? toAdjacentPost(publishedPosts[publishedIndex - 1]) : undefined;

		return {
			params: { slug },
			props: {
				...post,
				previousPost,
				nextPost,
				data: {
					...post.data,
					updatedDate,
				},
			},
		};
	});
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost
	{...post.data}
	previousPost={post.previousPost}
	nextPost={post.nextPost}
	content={post.body}
>
	<Content />
</BlogPost>
