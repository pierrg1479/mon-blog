---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { execSync } from 'node:child_process';
import path from 'node:path';

export const prerender = true;

export async function getStaticPaths() {
	const getGitLastUpdatedDate = (entryId: string) => {
		try {
			const filePath = path.join(process.cwd(), 'src', 'content', 'blog', entryId);
			const isoDate = execSync(`git log -1 --format=%cI -- "${filePath}"`, {
				encoding: 'utf-8',
			}).trim();

			if (!isoDate) return undefined;

			const parsedDate = new Date(isoDate);
			return Number.isNaN(parsedDate.getTime()) ? undefined : parsedDate;
		} catch (error) {
			console.warn(`Impossible de récupérer la dernière modification pour ${entryId}:`, error);
			return undefined;
		}
	};

	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: {
			...post,
			data: {
				...post.data,
				updatedDate: post.data.updatedDate ?? getGitLastUpdatedDate(post.id),
			},
		},
	}));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data} content={post.body}>
	<Content />
</BlogPost>
