<style>
  .author-box {
    display: grid;
    grid-template-columns: 80px 1fr;
    grid-template-areas:
      "avatar content"
      "avatar social";
    gap: 1.75rem;
    padding: 2rem;
    margin: 3rem 0 2rem;
    background: rgba(255, 208, 77, 0.06);
    border-left: 4px solid #ffd04d;
    border-radius: 12px;
    align-items: start;
  }

  .author-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    flex-shrink: 0;
    border: 3px solid #ffd04d;
    object-fit: cover;
    align-self: start;
    grid-area: avatar;
  }

  .author-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    grid-area: content;
  }

  .author-text {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    display: block;
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .author-name em {
    font-style: italic;
    font-weight: 700;
  }

  .author-bio {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
  }

  .author-social {
    display: flex;
    gap: 1rem;
    grid-area: social;
  }

  .author-social a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--color-bg-tertiary);
    color: var(--color-text);
    transition: all 0.2s ease;
  }

  .author-social a:hover {
    background: #ffd04d;
    color: #000;
    transform: translateY(-2px);
  }

  .author-social svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 640px) {
    .author-box {
      grid-template-columns: 1fr;
      grid-template-areas:
        "avatar"
        "content"
        "social";
      text-align: center;
      gap: 1.25rem;
      justify-items: center;
    }

    .author-avatar {
      width: 70px;
      height: 70px;
    }

    .author-social {
      justify-content: center;
    }
  }
</style>
