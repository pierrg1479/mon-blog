---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
	<nav class="nav">
		<div class="nav-left">
			<a href="/" class="brand">âš¡ {SITE_TITLE}</a>
		</div>
		<div class="nav-center">
			<div class="internal-links desktop">
				<HeaderLink href="/">
					<span class="nav-icon" aria-hidden="true">
						<svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
							<path d="M4 10.5L12 4l8 6.5V20a1 1 0 0 1-1 1h-5v-6H10v6H5a1 1 0 0 1-1-1v-9.5Z" />
						</svg>
					</span>
					Accueil
				</HeaderLink>
				<HeaderLink href="/about">
					<span class="nav-icon" aria-hidden="true">
						<svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
							<path d="M12 7.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm-2 5.5h4v6h-4v-6Z" />
							<path d="M12 3a9 9 0 1 1 0 18 9 9 0 0 1 0-18Z" />
						</svg>
					</span>
					A propos
				</HeaderLink>
				<HeaderLink href="/contact">
					<span class="nav-icon" aria-hidden="true">
						<svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
							<path d="M4 6h16a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1Zm0 2 8 5 8-5" />
						</svg>
					</span>
					Contact
				</HeaderLink>
			</div>
		</div>
		<div class="nav-right">
			<div class="theme-toggle">
				<ThemeToggle />
			</div>
			<button class="menu-toggle" type="button" aria-expanded="false" aria-controls="mobile-menu">
				<span class="sr-only">Ouvrir le menu</span>
				<span class="bar"></span>
				<span class="bar"></span>
				<span class="bar"></span>
			</button>
		</div>
	</nav>
	<div id="mobile-menu" class="mobile-menu" data-open="false">
		<div class="internal-links">
			<HeaderLink href="/">
				<span class="nav-icon" aria-hidden="true">
					<svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
						<path d="M4 10.5L12 4l8 6.5V20a1 1 0 0 1-1 1h-5v-6H10v6H5a1 1 0 0 1-1-1v-9.5Z" />
					</svg>
				</span>
				Accueil
			</HeaderLink>
			<HeaderLink href="/about">
				<span class="nav-icon" aria-hidden="true">
					<svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
						<path d="M12 7.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm-2 5.5h4v6h-4v-6Z" />
						<path d="M12 3a9 9 0 1 1 0 18 9 9 0 0 1 0-18Z" />
					</svg>
				</span>
				A propos
			</HeaderLink>
			<HeaderLink href="/contact">
				<span class="nav-icon" aria-hidden="true">
					<svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
						<path d="M4 6h16a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1Zm0 2 8 5 8-5" />
					</svg>
				</span>
				Contact
			</HeaderLink>
		</div>
	</div>
</header>
<script>
	const toggleButton = document.querySelector('.menu-toggle');
	const mobileMenu = document.querySelector('#mobile-menu');
	const mobileLinks = mobileMenu?.querySelectorAll('a');

	const setMenuState = (isOpen: boolean) => {
		if (!toggleButton || !mobileMenu) return;
		toggleButton.setAttribute('aria-expanded', String(isOpen));
		mobileMenu.dataset.open = String(isOpen);
		mobileMenu.classList.toggle('open', isOpen);
		document.body.classList.toggle('no-scroll', isOpen);
	};

	toggleButton?.addEventListener('click', () => {
		const isOpen = mobileMenu?.classList.contains('open');
		setMenuState(!isOpen);
	});

	mobileLinks?.forEach((link) =>
		link.addEventListener('click', () => {
			setMenuState(false);
		})
	);
</script>
<style>
	header {
		margin: 0;
		padding: 0;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 10;
	}
	:global(.dark) header {
		background: rgb(17, 24, 39);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
	}
	
	/* GRID LAYOUT - Logo gauche, Menu centre, Toggle droite */
	.nav {
		display: grid;
		grid-template-columns: minmax(200px, 1fr) auto minmax(200px, 1fr);
		align-items: center;
		padding: 1em 2em;
		gap: 2rem;
	}
	
	.nav-left {
		justify-self: start;
	}
	
	.nav-center {
		justify-self: center;
	}
	
	.nav-right {
		justify-self: end;
		display: flex;
		align-items: center;
		gap: 0.75em;
	}
	
	.brand {
		text-decoration: none;
		color: rgb(var(--black));
		font-weight: 700;
		font-size: 1em;
		white-space: nowrap;
	}
	:global(.dark) .brand {
		color: rgb(255, 255, 255);
	}
	
	.theme-toggle {
		display: flex;
		align-items: center;
	}
	
	.internal-links {
		display: flex;
		gap: 1.5em;
		align-items: center;
		justify-content: center;
	}
	.internal-links .nav-icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		margin-right: 0.4em;
		color: #9ca3af;
	}
	.internal-links .nav-icon svg {
		width: 1em;
		height: 1em;
		stroke: currentColor;
		stroke-width: 1.8;
		fill: none;
		display: block;
	}
	.internal-links a {
		padding: 0.5em 0;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: border-color 0.2s ease;
		display: inline-flex;
		align-items: center;
	}
	:global(.dark) .internal-links a {
		color: rgb(255, 255, 255);
	}
	.internal-links a.active,
	.internal-links a:hover {
		border-bottom-color: #ffd04d;
	}
	
	.menu-toggle {
		display: none;
		flex-direction: column;
		justify-content: center;
		gap: 4px;
		width: 42px;
		height: 42px;
		padding: 10px;
		border-radius: 50%;
		border: 1px solid rgba(var(--black), 10%);
		background: transparent;
		cursor: pointer;
		transition: background 0.2s ease;
	}
	.menu-toggle:hover {
		background: rgba(var(--black), 5%);
	}
	:global(.dark) .menu-toggle {
		border-color: rgba(255, 255, 255, 0.16);
	}
	:global(.dark) .menu-toggle:hover {
		background: rgba(255, 255, 255, 0.1);
	}
	.menu-toggle .bar {
		width: 100%;
		height: 2px;
		background: rgb(var(--black));
		border-radius: 3px;
		display: block;
	}
	:global(.dark) .menu-toggle .bar {
		background: white;
	}
	
	.mobile-menu {
		display: none;
		flex-direction: column;
		gap: 1em;
		padding: 0 2em 1em;
		border-bottom: 1px solid rgba(var(--black), 8%);
	}
	:global(.dark) .mobile-menu {
		border-bottom-color: rgba(255, 255, 255, 0.12);
	}
	.mobile-menu .internal-links {
		flex-direction: column;
		align-items: center;
	}
	.mobile-menu .internal-links a {
		width: 100%;
		padding: 0.5em 0.25em;
		text-align: center;
	}
	
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}
	
	/* RESPONSIVE */
	@media (max-width: 900px) {
		.nav {
			grid-template-columns: auto 1fr auto;
			padding: 0.75em 1em;
			gap: 1rem;
		}
		.desktop {
			display: none;
		}
		.menu-toggle {
			display: flex;
		}
		.mobile-menu {
			display: none;
		}
		.mobile-menu.open {
			display: flex;
		}
	}
	
	@media (min-width: 901px) {
		.mobile-menu {
			display: none !important;
		}
		.menu-toggle {
			display: none;
		}
	}
	
	:global(body.no-scroll) {
		overflow: hidden;
	}
</style>
