	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1em 0;
	}
	.internal-links {
		display: flex;
		gap: 1em;
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
	}
	.internal-links a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	:global(.dark) .internal-links a {
		color: rgb(255, 255, 255);
	}
	.internal-links a.active {
		text-decoration: none;
		border-bottom-color: rgb(var(--accent));
	}
	.social-links {
		flex: 1;
		display: flex;
		gap: 0.5em;
		justify-content: flex-end;
		align-items: center;
	}
	.social-links a {
		display: flex;
		color: rgb(var(--black));
		padding: 0;
		border: none;
	}
	.social-links svg {
		color: rgb(var(--black));
	}
	:global(.dark) .social-links a {
		color: rgb(255, 255, 255);
	}
	:global(.dark) .social-links svg {
		color: rgb(255, 255, 255);
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
