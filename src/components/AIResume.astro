---
// AIResume.astro
// Bouton pour résumer l'article avec ChatGPT
interface Props {
  title: string;
  url?: string;
}

const { title, url } = Astro.props;

// Construire l'URL complète
const articleUrl = url || new URL(Astro.url.pathname, Astro.site || Astro.url.origin).href;

// Créer le prompt pour ChatGPT
const prompt = `Résume cet article de manière concise, en listant les points clés à retenir. Titre : ${title} — URL : ${articleUrl}`;

// Encoder pour l'URL ChatGPT
const encodedPrompt = encodeURIComponent(prompt);
const chatGPTUrl = `https://chat.openai.com/?q=${encodedPrompt}`;
---

<div class="ai-resume-container">
  <a
    href={chatGPTUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="ai-resume-button"
    aria-label="Résumer avec l'IA"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="ai-icon"
    >
      <path d="M12 2a2 2 0 0 1 2 2c0 .74-.4 1.39-1 1.73V7h1a7 7 0 0 1 7 7h1a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v1a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-1H2a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h1a7 7 0 0 1 7-7h1V5.73c-.6-.34-1-.99-1-1.73a2 2 0 0 1 2-2z" />
      <line x1="12" x2="12" y1="11" y2="17" />
      <line x1="9" x2="9.01" y1="14" y2="14" />
      <line x1="15" x2="15.01" y1="14" y2="14" />
    </svg>
    <span class="button-text">RÉSUMER AVEC L'IA</span>
  </a>
</div>

<style>
  .ai-resume-container {
    margin: 2rem 0 2.5rem;
    display: flex;
    justify-content: center;
  }

  .ai-resume-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.75rem;
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    color: #1f2937;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  [data-theme='dark'] .ai-resume-button {
    background: #1f2937;
    border-color: #374151;
    color: #f9fafb;
  }

  .ai-resume-button:hover {
    background: #ffd04d;
    border-color: #ffd04d;
    color: #1f2937;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 208, 77, 0.4);
  }

  .ai-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .button-text {
    white-space: nowrap;
  }

  /* Animation au hover */
  @media (hover: hover) {
    .ai-resume-button:hover .ai-icon {
      animation: pulse 0.6s ease-in-out;
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.15);
    }
  }

  /* Responsive */
  @media (max-width: 640px) {
    .ai-resume-button {
      width: 100%;
      justify-content: center;
      padding: 1rem 1.5rem;
    }
  }
</style>
