---
export interface FaqItem {
  question: string;
  answer: string;
}

export interface Props {
  items: FaqItem[];
  title?: string;
}

const { items, title = "Questions fréquentes" } = Astro.props;
---

<section class="faq-block not-prose">
  <h2 class="faq-block__title">{title}</h2>
  <div class="faq-block__list">
    {items.map((item) => (
      <details class="faq-block__item">
        <summary class="faq-block__question">{item.question}</summary>
        <div class="faq-block__answer">
          <div set:html={item.answer} />
        </div>
      </details>
    ))}
  </div>
</section>

{/* Schema FAQ JSON-LD pour le SEO */}
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": items.map((item) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer,
    },
  })),
})} />

<style>
  .faq-block {
    margin: 2rem 0;
  }

  .faq-block__title {
    display: none;
  }

  .faq-block__list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .faq-block__item {
    margin: 0 !important;
    padding: 1.25rem 1.5rem !important;
    border: 1px solid rgba(0, 0, 0, 0.1) !important;
    border-radius: 12px !important;
    background: rgba(0, 0, 0, 0.02) !important;
    box-shadow: none !important;
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  :global(html.dark) .faq-block__item {
    border-color: rgba(255, 255, 255, 0.1) !important;
    background: rgba(255, 255, 255, 0.03) !important;
  }

  .faq-block__item:hover {
    background: rgba(0, 0, 0, 0.04) !important;
  }

  :global(html.dark) .faq-block__item:hover {
    background: rgba(255, 255, 255, 0.05) !important;
  }

  .faq-block__question {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0;
    cursor: pointer;
    font-weight: 700;
    font-size: 0.95rem;
    line-height: 1.5;
    color: rgb(30, 41, 59);
    list-style: none;
    user-select: none;
  }

  .faq-block__question::before {
    content: '▶';
    font-size: 0.875rem;
    color: #6b7280;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .faq-block__item[open] .faq-block__question::before {
    transform: rotate(90deg);
  }

  .faq-block__question:hover::before {
    color: #d97706;
  }

  :global(html.dark) .faq-block__question {
    color: #e5e7eb;
  }

  :global(html.dark) .faq-block__question::before {
    color: #9ca3af;
  }

  :global(html.dark) .faq-block__question:hover::before {
    color: #fbbf24;
  }

  /* Masquer le marker natif */
  .faq-block__question::-webkit-details-marker {
    display: none;
  }

  .faq-block__question::marker {
    content: "";
  }

  .faq-block__answer {
    padding: 1rem 0 0 1.5rem !important;
    color: rgb(71, 85, 105);
    font-size: 0.92rem;
    line-height: 1.7;
    margin: 0;
    border: none;
  }

  :global(html.dark) .faq-block__answer {
    color: #9ca3af;
  }

  .faq-block__answer p {
    margin: 0;
  }

  .faq-block__answer ul {
    margin: 0.5rem 0 0 0;
    padding-left: 1.25rem;
    list-style-type: disc;
  }

  .faq-block__answer li {
    margin: 0.25rem 0;
  }

  .faq-block__answer strong {
    font-weight: 600;
    color: rgb(30, 41, 59);
  }

  :global(html.dark) .faq-block__answer strong {
    color: #e5e7eb;
  }

  @media (max-width: 768px) {
    .faq-block {
      margin: 1.5rem 0;
    }

    .faq-block__list {
      gap: 0.5rem;
    }

    .faq-block__item {
      padding: 1rem 1.25rem !important;
      border-radius: 10px !important;
    }

    .faq-block__question {
      font-size: 0.9rem;
    }

    .faq-block__answer {
      padding: 0.875rem 0 0 1.375rem !important;
      font-size: 0.88rem;
    }
  }
</style>
