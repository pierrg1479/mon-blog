---
export interface Props {
  href: string;
  title: string;
  price: string;
  imageSrc: string;
  imageAlt?: string;
  cta?: string;
  disclaimer?: string;
  dataAff?: string;
}

const {
  href,
  title,
  price,
  imageSrc,
  imageAlt = title,
  cta = "Voir le produit",
  disclaimer,
  dataAff,
} = Astro.props;

const ariaLabel = `${title} â€” ${price} (${cta})`;
---

<a
  class="aff-inline"
  href={href}
  target="_blank"
  rel="sponsored noopener noreferrer"
  aria-label={ariaLabel}
  data-aff={dataAff}
>
  <img
    class="aff-inline__img"
    src={imageSrc}
    alt={imageAlt}
    loading="lazy"
    decoding="async"
  />
  <div class="aff-inline__body">
    <div class="aff-inline__title">{title}</div>
    <div class="aff-inline__meta">
      <div class="aff-inline__price">{price}</div>
      <div class="aff-inline__cta" aria-hidden="true">{cta}</div>
    </div>
    {disclaimer && <div class="aff-inline__disclaimer">{disclaimer}</div>}
  </div>
</a>

<style>
  .aff-inline {
    display: grid;
    grid-template-columns: 60px 1fr;
    gap: 8px;
    align-items: center;
    padding: 8px 10px;
    border-radius: 12px;
    border: 1px solid var(--border, rgba(0, 0, 0, 0.08));
    background: var(--card, rgba(255, 255, 255, 0.9));
    color: var(--text, rgba(0, 0, 0, 0.86));
    text-decoration: none;
    transition: transform 0.2s ease, border-color 0.2s ease,
      background-color 0.2s ease, box-shadow 0.2s ease;
  }

  .aff-inline:hover {
    transform: translateY(-1px);
    border-color: var(--border-hover, rgba(0, 0, 0, 0.16));
    background: var(--card-hover, rgba(255, 255, 255, 1));
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
  }

  .aff-inline:hover .aff-inline__cta {
    background: var(--cta-bg, rgba(255, 208, 77, 0.32));
    transform: translateY(-1px);
  }

  .aff-inline:focus-visible {
    outline: none;
    transform: translateY(-1px);
    border-color: var(--border-hover, rgba(0, 0, 0, 0.16));
    box-shadow: 0 0 0 3px var(--focus, rgba(255, 208, 77, 0.45));
  }

  .aff-inline__img {
    width: 60px;
    height: 60px;
    border-radius: 10px;
    object-fit: cover;
    background: var(--card, rgba(0, 0, 0, 0.04));
    border: 1px solid var(--border, rgba(0, 0, 0, 0.06));
  }

  .aff-inline__body {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .aff-inline__title {
    font-weight: 700;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .aff-inline__meta {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-wrap: wrap;
  }

  .aff-inline__price {
    font-weight: 700;
    font-size: 0.92rem;
  }

  .aff-inline__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-left: auto;
    padding: 6px 12px;
    border-radius: 999px;
    background: var(--cta-bg, rgba(255, 208, 77, 0.2));
    color: var(--text, rgba(0, 0, 0, 0.9));
    font-weight: 600;
    font-size: 0.9rem;
    white-space: nowrap;
    transition: transform 0.15s ease, background-color 0.2s ease;
  }

  .aff-inline__disclaimer {
    font-size: 0.85rem;
    color: var(--text, rgba(0, 0, 0, 0.86));
    opacity: 0.7;
  }

  .dark .aff-inline {
    border-color: var(--border, rgba(255, 255, 255, 0.12));
    background: var(--card, rgba(24, 29, 39, 0.95));
    color: var(--text, rgba(255, 255, 255, 0.92));
  }

  .dark .aff-inline:hover {
    border-color: var(--border-hover, rgba(255, 255, 255, 0.22));
    background: var(--card-hover, rgba(24, 29, 39, 1));
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.35);
  }

  .dark .aff-inline:focus-visible {
    border-color: var(--border-hover, rgba(255, 255, 255, 0.22));
    box-shadow: 0 0 0 3px var(--focus, rgba(255, 208, 77, 0.4));
  }

  .dark .aff-inline__img {
    background: var(--card, rgba(255, 255, 255, 0.04));
    border-color: var(--border, rgba(255, 255, 255, 0.12));
  }

  .dark .aff-inline__cta {
    background: var(--cta-bg, rgba(255, 208, 77, 0.28));
    color: var(--text, rgba(255, 255, 255, 0.96));
  }

  .dark .aff-inline__disclaimer {
    opacity: 0.75;
  }

  @media (max-width: 540px) {
    .aff-inline {
      grid-template-columns: 64px 1fr;
    }

    .aff-inline__img {
      width: 64px;
      height: 64px;
    }
  }
</style>
