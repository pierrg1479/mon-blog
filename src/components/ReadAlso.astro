  }

  .read-also__link {
    font-size: 1rem;
    font-weight: 700;
    color: var(--black, #111827);
    text-decoration: none;
    line-height: 1.4;
  }

  .read-also__link:hover {
    text-decoration: underline;
  }

  :global(html.dark) .read-also__link {
    color: #e5e7eb;
  }

  :global(html.dark) .read-also {
